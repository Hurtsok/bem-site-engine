#!/usr/bin/env sh

PIDFILE=/var/run/yandex/legoa/master.pid

if [ ! -f "$PIDFILE" ]; then
    exit 1
fi

pid=`cat $PIDFILE`
rss=`ps h -o pid,vsz -p $pid --ppid $pid \
    | awk '{ name = FNR==1? "master" : "worker_"FNR-1; print name ":" $2 }' \
    | paste -sd " "`

echo "{[nodejs_vsz_legoa=$rss]}"

exit 0

