block posts-item, elem translator {

    default, !(this.ctx && this.ctx.content): {
        return false;
    }

    content : [
        BEM.I18N('posts-item', this.elem),
        ': ',
        {
            tag: 'strong',
            content: this.ctx.content
        }
        //TODO make translator name as url to other page
    ]
}
