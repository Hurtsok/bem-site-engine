block author, mod view simple {

    tag: 'a'

    mix: { block: 'link' }

    attrs: { href : this.ctx.content.url }

    content: [
        {
            block: 'author',
            elem: 'name',
            content: this.ctx.content
        }
    ]

    this._.isSimple(this.ctx.content), content: this.ctx.content
}
