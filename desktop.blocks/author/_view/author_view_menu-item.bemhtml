block author, mod view menu-item {

    tag: 'a'

    attrs: { href : '/authors/' + this.ctx.id }

    content: {
        var c = this.ctx.content;

        return [
            c.lastName,
            ' ',
            c.firstName
        ]
    }

    this._.isSimple(this.ctx.content), content: this.ctx.content
}
