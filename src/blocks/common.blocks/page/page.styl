body,
html
{
    height: 100%;
    padding: 0;
}

.page
{
    font: 13px Arial, Helvetica, sans-serif;

    position: relative;
    z-index: 0;

    display: flex;

    min-width: 1000px;
    margin: 0;
    padding: 0;

    &_page_tags,
    &_page_authors
    {
        & .page__fullscreen
        {
            display: none;
        }
    }
}

/* Fix for iframe from yandex metrika */
iframe[src="//yastatic.net/share/metrika.html"] {
    top: 0;
}
