block header, mod type lego {
    this.ctx.content, content: [
        {
            block: 'logo',
            mods: { type: 'lego' },
            url: '/'
        },
        {
            block: 'menu-list',
            mods: { type: 'header' },
            content: this.ctx.content.items
                .filter(function(item, idx) {
                    return idx > 1;
                })
                .map(function(item, idx) {
                    return {
                        block: 'link',
                        url: item.url,
                        mix: [{
                            block: 'menu-list',
                            elem: 'link',
                            elemMods: {
                                active: item.active,
                                type: item.type,
                                size: item.size
                            }
                        }],
                        content: item.title
                    };
                })
        }
    ]

}
