block('posts').elem('list').match(function () {
	return this.isArray(this.ctx.content);
}).content()(function () {
	var data = this.data;

	return this.ctx.content.map(function (item) {
		if (!item.source || !item.source[data.lang]) {
			return '';
		}

		return {
			block: 'post',
			mods: { view: 'list-item' },
			node: item
		};
	});
});
