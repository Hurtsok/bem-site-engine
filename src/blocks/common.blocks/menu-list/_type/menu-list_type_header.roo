.menu-list_type_header
{
    overflow: hidden;

    border-right: none;

    align-self: center;

    .menu-list__link
    {
        font-size: 15px;

        display: inline-block;
        vertical-align: middle;

        margin-right: 20px;

        transition: .3s color;

        color: #fff;

        &:hover,
        &_active
        {
            color: #FFD94D;
        }
    }
}
