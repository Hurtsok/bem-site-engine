block('author').mod('view', 'full')(

    mix()({ block: 'island' }),

    content()(function() {
        return [
            {
                elem: 'avatar-wrapper',
                content: [
                    apply('avatar')
                ]
            },
            {
                elem: 'data-wrapper',
                content: [
                    apply('name'),
                    {
                        elem: 'contact',
                        content: [
                            apply('e-mail'),
                            apply('github'),
                            apply('twitter'),
                            apply('skype')
                        ]
                    },
                    apply('info')
                ]
            }
        ];
    }),

    mode('avatar')(function() {
        var content = this.ctx.content;

        return {
            block: 'author',
            elem: 'avatar',
            elemMods: { size: 'medium', 'no-image': !content.avatar && 'yes' },
            content: content
        };
    }),

    mode('name')(function() {
        return {
            block: 'author',
            elem: 'name',
            content: this.ctx.content
        };
    }),

    mode('e-mail')(function() {
        return {
            block: 'author',
            elem: 'e-mail',
            content: this.ctx.content.email,
            mix: { elem: 'contact-item' }
        };
    }),

    mode('github')(function() {
        return {
            block: 'author',
            elem: 'github',
            content: this.ctx.content.github,
            mix: { elem: 'contact-item' }
        };
    }),

    mode('twitter')(function() {
        return {
            block: 'author',
            elem: 'twitter',
            content: this.ctx.content.twitter,
            mix: { elem: 'contact-item' }
        };
    }),

    mode('skype')(function() {
        return {
            block: 'author',
            elem: 'skype',
            content: this.ctx.content.skype,
            mix: { elem: 'contact-item' }
        };
    }),

    mode('info')(function() {
        return {
            block: 'author',
            elem: 'info',
            content: this.ctx.content.info
        };
    }),

    match(function () { return this.isSimple(this.ctx.content); }).content()(function() {
        return this.ctx.content;
    })
);
