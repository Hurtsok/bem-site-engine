block('author').mod('view', 'grid-cell')(

    tag()('a'),

    attrs()({ href: this.ctx.content.url }),

    content()(function() {
        return [
            {
                block: 'author',
                elem: 'avatar',
                elemMods: { size: 'medium', 'no-image': this.ctx.content.avatar && 'yes' },
                content: this.ctx.content
            },
            {
                block: 'author',
                elem: 'name',
                content: this.ctx.content
            }
        ];
    })
);
