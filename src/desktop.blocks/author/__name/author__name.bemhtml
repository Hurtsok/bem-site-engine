block author, elem name {

    default, !(this.ctx && this.ctx.content): {
        return false;
    }

    tag: 'span'

    content {

        this.ctx.content.lastName: {
            return this.ctx.content.lastName
        }

        (this.ctx.content.firstName && this.ctx.content.lastName): {
            return [
                this.ctx.content.firstName,
                ' ',
                this.ctx.content.lastName
            ]
        }
    }
}
